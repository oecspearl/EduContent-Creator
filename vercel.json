{
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist/public",
  "framework": null,
  "installCommand": "npm install",
  "rewrites": [
    { "source": "/api/health", "destination": "/api/health" },
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60,
      "includeFiles": "{server,shared,db}/**/*.{ts,js,json}"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
